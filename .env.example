# Coffee Shop WhatsApp Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DATABASE_URL=postgresql://bonythomas@localhost:5432/coffee_shop_bot

# Twilio WhatsApp Configuration (Optional - will use mock mode if not set)
TWILIO_ACCOUNT_SID=test
TWILIO_AUTH_TOKEN=test
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Clover POS Configuration (Optional - will use mock data if not set)
CLOVER_API_TOKEN=test
CLOVER_MERCHANT_ID=test
CLOVER_BASE_URL=test

# LLM Configuration (Optional - will use fallback responses if not set)
LLM_PROVIDER=openai
OPENAI_API_KEY=test
OPENAI_MODEL=test

LLM_PROVIDER=deepseek
DEEPSEEK_API_KEY=test
DEEPSEEK_MODEL=deepseek-chat  # or any other DeepSeek model
DEEPSEEK_API_BASE=https://api.deepseek.com/v1  # default, can be overridden

# Alternative LLM Providers (Optional)
TOGETHER_API_KEY=your-together-api-key
XAI_API_KEY=your-xai-api-key

# Development Settings
DEBUG=True
TESTING=False

# Logging
LOG_LEVEL=INFO
